<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/colorPrimary</item>
        <item name="background">@color/colorPrimary</item>
<!--        <item name="colorPrimary">@color/colorPrimary</item>-->
<!--        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
<!--        <item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="OrderDetails.Label" parent="AppTheme">
        <item name="android:textColor">@android:color/black</item>
<!--        <item name="android:fontFamily"></item>-->
        <item name="android:textSize">@dimen/order_details_label_header_text_size</item>
    </style>

    <style name="OrderDetails.Label.Bold" parent="OrderDetails.Label">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OrderDetails.Label.Header" parent="OrderDetails.Label">
        <item name="android:textSize">@dimen/order_details_label_main_header_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OrderDetails.Label.ActionBarTitle" parent="OrderDetails.Label">
        <item name="android:textSize">@dimen/actionbar_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OrderDetails.Label.ActionBarTitle.Back" parent="OrderDetails.Label">
        <item name="android:textSize">@dimen/actionbar_back_button_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OrderDetails.Label.ThemeColor" parent="OrderDetails.Label">
        <item name="android:textColor">@color/theme_color_orange</item>
    </style>

        <!-- Base application theme. -->



</resources>
